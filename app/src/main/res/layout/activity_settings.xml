<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">


    <TextView
        android:id="@+id/setting1TextViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/setting1SwitchID"
        app:layout_constraintBottom_toTopOf="@id/setting2TextViewID"
        android:textSize="20sp"
        app:layout_constraintVertical_bias="0.7"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/setting1SwitchID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/setting1TextViewID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/setting1TextViewID"
        app:layout_constraintBottom_toBottomOf="@id/setting1TextViewID"/>

    <TextView
        android:id="@+id/setting2TextViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/setting2SwitchID"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20sp"
        app:layout_constraintVertical_bias="0.3"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/setting2SwitchID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/setting2TextViewID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/setting2TextViewID"
        app:layout_constraintBottom_toBottomOf="@id/setting2TextViewID"/>


</androidx.constraintlayout.widget.ConstraintLayout>